root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.el,*.enc,*.hs,*.nw}]
indent_size = none

[*.json]
indent_size = 4

[Makefile*]
indent_style = tab

[VERSION]
insert_final_newline = false

[node-packages.json]
indent_size = none
